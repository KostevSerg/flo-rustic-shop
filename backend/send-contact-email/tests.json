{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200,
      "expectedBody": ""
    },
    {
      "name": "POST with valid data returns success",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тестовый Пользователь",
        "phone": "+7 999 123 45 67",
        "message": "Тестовое сообщение"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST with missing fields returns 400",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Тест"
      },
      "expectedStatus": 400,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
